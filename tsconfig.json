{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "jsx": "react",
    "declaration": true,
    "outDir": "./lib",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "downlevelIteration": true,
    "typeRoots": ["node_modules/@types", "node_modules/just-stack-react/node_modules/@types"],
    "allowJs": true,
  },

  "include": ["src", "typings/*.d.ts"]
}
